{% from '_layouts/macros/lib.twig' import img %}

{# @var person \craft\elements\Entry #}

{% set person = entry.person.one %}
{% set image = entry.image.one  ?? person.photo.one%}
{% set align = entry.align.value ?? 'default' %}

<div class="pt-16 lg:py-24">
    <div class="bg-primary dark:bg-gray-700 pb-16 lg:relative lg:z-10 lg:pb-0">
        <div class="lg:mx-auto lg:grid lg:max-w-7xl lg:grid-cols-3 lg:gap-8 lg:px-8">
            {% if image %}
                <div class="relative lg:-my-8 lg:order-2">
                    <div aria-hidden="true" class="absolute inset-x-0 top-0 h-1/2 bg-background dark:bg-background-dark lg:hidden"></div>
                    <div class="mx-auto max-w-md px-6 sm:max-w-3xl lg:h-full lg:p-0">
                        <div class="aspect-w-10 aspect-h-6 overflow-hidden rounded-xl shadow-xl sm:aspect-w-16 sm:aspect-h-7 lg:aspect-w-5 lg:aspect-h-6 lg:h-full">
                            {{ img(image, {
                                transform: {width: 768, height: 400},
                                srcset: [768, {width: 400, height: 500, format: 'webp'}],
                                attr: {
                                    class: 'object-cover lg:h-full lg:w-full',
                                    sizes: '(min-width: 768px) 400px, 768px',
                                }
                            }) }}
                        </div>
                    </div>
                </div>
            {% endif %}
            <div class="mt-12 lg:col-span-2 lg:m-0 lg:pl-8 {{ align == 'right' ? 'lg:order-1' : 'lg:order-3' }}">
                <div class="mx-auto max-w-md px-6 sm:max-w-2xl lg:max-w-none lg:px-0 lg:py-20">
                    <blockquote>
                        <div>
                            <svg class="h-12 w-12 text-white opacity-25" fill="currentColor" viewBox="0 0 32 32" aria-hidden="true">
                                <path d="M9.352 4C4.456 7.456 1 13.12 1 19.36c0 5.088 3.072 8.064 6.624 8.064 3.36 0 5.856-2.688 5.856-5.856 0-3.168-2.208-5.472-5.088-5.472-.576 0-1.344.096-1.536.192.48-3.264 3.552-7.104 6.624-9.024L9.352 4zm16.512 0c-4.8 3.456-8.256 9.12-8.256 15.36 0 5.088 3.072 8.064 6.624 8.064 3.264 0 5.856-2.688 5.856-5.856 0-3.168-2.304-5.472-5.184-5.472-.576 0-1.248.096-1.44.192.48-3.264 3.456-7.104 6.528-9.024L25.864 4z" />
                            </svg>
                            <div class="mt-6 text-2xl font-medium text-white">{{ entry.body|md|purify }}</div>
                        </div>
                        {% if person %}
                            <footer class="mt-6">
                                <div class="text-lg font-medium text-white">{{ person.title }}</div>
                                <div class="mt-1 font-medium text-gray-100">{{ person.teaser }}</div>
                            </footer>
                        {% endif %}
                    </blockquote>
                </div>
            </div>
        </div>
    </div>
</div>

