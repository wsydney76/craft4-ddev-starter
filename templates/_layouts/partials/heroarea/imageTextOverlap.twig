{% from '_layouts/macros/lib.twig' import img %}
{% from '_layouts/macros/lib.twig' import imgCopyright %}

{% set handleCopyright = customConfig.handleCopyright %}

{{ img(image, {
    transform: customConfig.heroTransform[customConfig.heroWidth],
    attr: {
        loading: null,
        fetchpriority: 'high'
    },
    handleCopyright: handleCopyright == 'show' ? 'overlay' : handleCopyright
}) }}


<header class="px-4">
    <div class="max-w-screen-md mx-auto py-6 px-12 -translate-y-16 -mb-16  {{ buttons ? 'md:-translate-y-32 md:-mb-32' }} bg-gray-200 dark:bg-gray-700 text-center">

        {% if topHtml %}
            {{ topHtml|raw }}
        {% endif %}

        {% if teaser is defined and teaser %}
            <div class="mb-2">
                {{ teaser }}
            </div>
        {% endif %}

        <h1 class="text-2xl xl:text-4xl font-extrabold tracking-wide">
            {{ title }}
        </h1>

        {% if text %}
            <div class="prose dark:prose-invert mt-6 sm:max-w-3xl">
                {{ text|md|purify }}
            </div>
        {% endif %}

        {% include '_layouts/partials/heroarea/_ctabuttons.twig' with {
            buttons,
            primaryColor: 'white',
            secondaryColor: 'light',
            classes: 'mt-8 justify-center'
        } only %}


        {% if bottomHtml %}
            {{ bottomHtml|raw }}
        {% endif %}

    </div>
</header>