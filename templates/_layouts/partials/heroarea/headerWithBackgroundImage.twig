{% from '_layouts/macros/lib.twig' import img %}
{% from '_layouts/macros/lib.twig' import imgCopyright %}

<div class="relative isolate overflow-hidden bg-[#363636] px-6 py-24 sm:py-32 lg:px-8">

    {% if image %}
        {{ img(image, {
            transform: {width: 2830, height: 1500},
            handleCopyright: 'none',
            srcset: [2830]|merge(customConfig.heroTransform.full),
            attr: {
                class: 'absolute inset-0 -z-10 h-full w-full object-cover grayscale mix-blend-multiply'
            }
        }) }}
    {% endif %}


    <div class="hidden sm:absolute sm:-top-10 sm:right-1/2 sm:-z-10 sm:mr-10 sm:block sm:transform-gpu sm:blur-3xl" aria-hidden="true">
        <div class="aspect-[1097/845] w-[68.5625rem] bg-gradient-to-tr from-secondary to-primary opacity-20" style="clip-path: polygon(74.1% 44.1%, 100% 61.6%, 97.5% 26.9%, 85.5% 0.1%, 80.7% 2%, 72.5% 32.5%, 60.2% 62.4%, 52.4% 68.1%, 47.5% 58.3%, 45.2% 34.5%, 27.5% 76.7%, 0.1% 64.9%, 17.9% 100%, 27.6% 76.8%, 76.1% 97.7%, 74.1% 44.1%)"></div>
    </div>
    <div class="absolute -top-52 left-1/2 -z-10 -translate-x-1/2 transform-gpu blur-3xl sm:top-[-28rem] sm:ml-16 sm:translate-x-0 sm:transform-gpu" aria-hidden="true">
        <div class="aspect-[1097/845] w-[68.5625rem] bg-gradient-to-tr from-secondary to-primary opacity-20" style="clip-path: polygon(74.1% 44.1%, 100% 61.6%, 97.5% 26.9%, 85.5% 0.1%, 80.7% 2%, 72.5% 32.5%, 60.2% 62.4%, 52.4% 68.1%, 47.5% 58.3%, 45.2% 34.5%, 27.5% 76.7%, 0.1% 64.9%, 17.9% 100%, 27.6% 76.8%, 76.1% 97.7%, 74.1% 44.1%)"></div>
    </div>
    <div class="mx-auto max-w-2xl text-center">

        {% if topHtml %}
            {{ topHtml|raw }}
        {% endif %}

        {% if teaser is defined and teaser %}
            <div class="text-white textlg mb-4">
                {{ teaser }}
            </div>
        {% endif %}

        <h1 class="text-4xl font-headings font-bold tracking-tight text-white sm:text-6xl">{{ title }}</h1>

        {% if text %}
            <p class="mt-6 text-lg leading-8 text-gray-300">{{ text }}</p>
        {% endif %}

        {% include '_layouts/partials/heroarea/_ctabuttons.twig' with {
            buttons,
            primaryColor: 'primary',
            secondaryColor: 'white',
            classes: 'mt-16 flex justify-center'
        } only %}

        {% if bottomHtml %}
            {{ bottomHtml|raw }}
        {% endif %}

        {% if image and image.copyright %}
            <div class="mt-4 text-gray-300">
                {{ imgCopyright(image) }}
            </div>
        {% endif %}
    </div>
</div>