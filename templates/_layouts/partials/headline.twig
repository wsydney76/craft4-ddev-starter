{# Renders Headline #}

{# @param text String The headline #}
{# @param tag String optional html tag #}
{# @param href String optional link target #}

{% set tag = tag ?? 'h2' %}
{% set href = href ?? null %}

{% if href %}
    {% set tag = 'a' %}
{% endif %}


{{ tag(tag, {
    text: text,
    class: 'text-3xl sm:text-4xl leading-9 font-headings font-extrabold text-primary dark:text-primary-dark mt-12 mb-6',
    href: href
}) }}