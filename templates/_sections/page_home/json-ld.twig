{% set image = siteInfo.featuredImage.one() %}
{% set schema = craft.schema %}

{{ schema.webSite
    .name(entry.title)
    .sourceOrganization(organization)
    .image(image ? image.url(customConfig.defaultTransform))
    .description(entry.tagline ?? entry.title)
    .url(entry.url)
    .datePublished(entry.postDate|date('Y-m-d'))
    .copyrightYear(entry.postDate|date('Y'))

|raw
}}