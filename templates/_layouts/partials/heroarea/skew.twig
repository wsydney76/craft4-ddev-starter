{% from '_layouts/macros/lib.twig' import img %}
{% from '_layouts/macros/lib.twig' import imgCopyright %}


<header class="relative ">

    <div class="max-w-full">
        <div class="relative sm:overflow-hidden">

            <div class="md:absolute md:inset-0">
                {{ img(image, {
                    transform: customConfig.heroTransform[customConfig.heroWidth],
                    attr: {
                        class: 'hidden md:block h-full w-full object-cover',
                        loading: null,
                        handleCopyright: 'none',
                        fetchpriority: 'high'
                    },
                }) }}
            </div>




            <div class="mb-16 flex justify-center items-center w-full bg-gradient-to-r from-primary to-secondary opacity-90 text-white
                        md:w-3/4 md:-skew-x-12 md:-ms-12 md:ps-8 md:rounded-br-3xl
                        2xl:w-1/2">
                <div class="md:skew-x-12 py-8 2xl:py-16 ps-12 pe-16">

                    {% if topHtml %}
                        {{ topHtml|raw }}
                    {% endif %}

                    {% if teaser is defined and teaser %}
                        <div class="mb-2">
                            {{ teaser }}
                        </div>
                    {% endif %}

                    <h1 class="text-4xl xl:text-5xl 2xl:text-6xl font-light tracking-wide">
                        {{ title }}
                    </h1>

                    {% if text %}
                        <div class="prose mt-4 text-lg tracking-wider text-white sm:max-w-3xl">
                            {{ text|md|purify }}
                        </div>
                    {% endif %}

                    {% include '_layouts/partials/heroarea/_ctabuttons.twig' with {
                        buttons,
                        primaryColor: 'white',
                        secondaryColor: 'light',
                        classes: 'mt-16'
                    } only %}


                    {% if bottomHtml %}
                        {{ bottomHtml|raw }}
                    {% endif %}

                    {% if customConfig.handleCopyright == 'show' %}
                        {{ imgCopyright(image) }}
                    {% endif %}

                </div>
            </div>

        </div>
    </div>

</header>
