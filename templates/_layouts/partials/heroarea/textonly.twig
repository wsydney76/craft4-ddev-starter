<div class="max-w-screen-md mx-auto relative px-4 py-16">

    {% if topHtml %}
        {{ topHtml|raw }}
    {% endif %}

    {% if teaser is defined and teaser %}
        <div class="mb-4 text-center text-primary dark:text-primary-dark text-lg">
            {{ teaser }}
        </div>
    {% endif %}

    <h1 class="text-center text-5xl font-headings font-semibold tracking-wider md:5xl sm:text-7xl lg:text-7xl">

        <span class="block text-primary dark:text-primary-dark">{{ title }}</span>

    </h1>

    {% if text %}
        <div class="prose mt-6 max-w-lg mx-auto text-center text-xl tracking-wider text-primary dark:text-primary-dark sm:max-w-3xl">
            {{ text|md|purify }}
        </div>
    {% endif %}

    {% include '_layouts/partials/heroarea/_ctabuttons.twig' with {
        buttons,
        primaryColor: 'primary',
        secondaryColor: 'white',
        classes: 'mt-16 flex justify-center'
    } only %}


    {% if bottomHtml %}
        {{ bottomHtml|raw }}
    {% endif %}

</div>