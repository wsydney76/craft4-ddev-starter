{# Show default page content #}

{% if not entry.showHeroArea %}
    {% embed '_layouts/embeds/container-md.twig' %}
        {% block content %}
            {% include '_layouts/partials/page-header.twig' with {
                entry,
                alignTitle: alignTitle ?? 'left'
            } only %}
        {% endblock %}
    {% endembed %}
{% endif %}

{% if customConfig.useCookieConsent != 'none' and entry.section.handle == 'legal' and entry.type.handle == 'privacy' %}
    {% embed '_layouts/embeds/container-md.twig' %}
        {% block content %}
            {% include '_partials/privacy_settings.twig' %}
        {% endblock %}
    {% endembed %}

{% endif %}

{% if entry.body %}
    {% embed '_layouts/embeds/container-md.twig' %}
        {% block content %}
            {% embed '_layouts/embeds/prose.twig' %}
                {% block content %}
                    {{ entry.body|md|purify }}
                {% endblock %}
            {% endembed %}
        {% endblock %}
    {% endembed %}


{% endif %}

{% if entry.bodyContent %}
    {% include '_layouts/partials/content-blocks.twig' with {
        query: entry.bodyContent
    } only %}
{% endif %}

{% embed '_layouts/embeds/container-xl.twig' %}
    {% block content %}
        {% include '_layouts/partials/entry-nav-structure.twig' with {
            entry
        } only %}
    {% endblock %}
{% endembed %}

